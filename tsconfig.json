{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "build",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "**/node_modules/**",
    "node_modules",
  ]
}

